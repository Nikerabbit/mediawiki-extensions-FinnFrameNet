{
	"name": "mediawiki/finnframenet",
	"type": "mediawiki-extension",
	"description": "Code to import and display FinnFrameNet and TransFrameNet in a MediaWiki",
	"homepage": "https://github.com/Nikerabbit/mediawiki-extensions-FinnFrameNet",
	"authors": [
		{
			"name": "Niklas LaxstrÃ¶m",
			"email": "niklas.laxstrom@gmail.com",
			"role": "Author"
		}
	],
	"require": {
		"php": ">=8.3",
		"guzzlehttp/guzzle": "~7.0",
		"ext-json": "*"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "v50.0.0",
		"mediawiki/minus-x": "2.0.1",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"rector/rector": "^2.1"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s",
			"minus-x check ."
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
